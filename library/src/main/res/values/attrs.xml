<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextViewSearchable">
        <attr name="highlightColor" format="color|reference"/>
        <attr name="highlightUnderline" format="boolean"/>
        <attr name="highlightTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>

</resources>